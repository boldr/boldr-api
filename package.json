{
  "name": "boldr-api",
  "version": "0.1.0",
  "description": "API server and database for Boldr CMS",
  "main": "index.js",
  "license": "MIT",
  "author": "Steven Truesdell <steven@strues.io>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boldr/boldr-api.git"
  },
  "bugs": "https://github.com/boldr/boldr-api/issues",
  "homepage": "https://github.com/boldr/boldr-api#readme",
  "scripts": {
    "api": "apidoc -i src -o static/apidocs",
    "apidoc": "apidoc-markdown2 -p static/apidocs -o docs/apidoc.md",
    "build": "NODE_ENV=production babel --ignore=src/**/*.spec.js src --out-dir lib",
    "build:test": "echo \"nothing\" && exit 0",
    "changelog": "conventional-changelog -p atom -i CHANGELOG.md",
    "clean": "rimraf lib && rimraf boldrAPI",
    "clean:lib": "rimraf lib",
    "clean:apidoc": "rimraf static/apidocs",
    "dev": "better-npm-run dev",
    "docker": "cd boldrAPI; docker build -t strues/boldr-api .",
    "format": "prettier-eslint --write \"src/**/*.js\" \"db/**/*.js\" \"internal/**/*.js\"",
    "lint": "eslint src db internal",
    "knex": "./node_modules/.bin/knex",
    "migrate": "better-npm-run migrate",
    "reset": "better-npm-run reset",
    "migrate:test": "better-npm-run migrate:test",
    "migration": "better-npm-run migration",
    "pkg": "npm run clean && npm run build && npm run pkg:dirs && npm run pkg:files && npm run clean:lib",
    "pkg:dirs": "mkdir boldrAPI && cp -a lib boldrAPI && cp -a db ./boldrAPI/ && cp -a static ./boldrAPI/",
    "pkg:files": "cp knexfile.js .env Procfile yarn.lock package.json boldrAPI/ && cp internal/docker/Dockerfile boldrAPI/ && cp internal/docker/docker-compose.prod.yml boldrAPI/docker-compose.yml",
    "precommit": "lint-staged",
    "prepush": "npm run test",
    "start": "NODE_ENV=production node lib/index.js",
    "seed": "better-npm-run seed",
    "seed:test": "better-npm-run seed:test",
    "test": "better-npm-run test",
    "test:ci": "better-npm-run test:ci"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "dependencies": {
    "app-root-dir": "^1.0.2",
    "bcrypt": "^1.0.2",
    "better-npm-run": "^0.0.15",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.1",
    "boldr-utils": "0.1.14",
    "busboy": "^0.2.14",
    "chalk": "^1.1.3",
    "compression": "^1.6.2",
    "connect-busboy": "^0.0.2",
    "connect-redis": "^3.2.0",
    "convict": "^3.0.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.3",
    "date-fns": "^1.28.2",
    "debug": "^2.6.3",
    "dotenv": "4.0.0",
    "express": "4.15.2",
    "express-flash": "^0.0.2",
    "express-redis-cache": "^0.5.1",
    "express-session": "^1.15.2",
    "express-validator": "^3.1.3",
    "express-winston": "^2.3.0",
    "fs-extra": "2.1.2",
    "gm": "^1.23.0",
    "helmet": "3.5.0",
    "hpp": "^0.2.1",
    "ioredis": "^2.5.0",
    "jsonwebtoken": "^7.3.0",
    "knex": "0.12.9",
    "lodash": "^4.17.4",
    "method-override": "^2.3.8",
    "moment": "^2.18.1",
    "morgan": "^1.8.1",
    "nodemailer": "^4.0.0",
    "objection": "0.7.12",
    "objection-find": "^0.4.0",
    "pg": "^6.1.5",
    "shortid": "^2.2.8",
    "source-map-support": "^0.4.14",
    "uuid": "^3.0.1",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "apidoc": "^0.17.5",
    "apidoc-markdown2": "^0.3.2",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.1",
    "babel-jest": "^19.0.0",
    "babel-plugin-syntax-async-functions": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.3.2",
    "chokidar": "^1.6.1",
    "cross-env": "^4.0.0",
    "cz-conventional-kawaii": "^0.1.4",
    "eslint": "^3.19.0",
    "eslint-config-boldr": "^0.8.10",
    "faker": "^4.1.0",
    "fast-async": "^6.2.2",
    "flow-bin": "^0.43.1",
    "husky": "^0.13.3",
    "jest": "^19.0.2",
    "lint-staged": "^3.4.0",
    "nodemon": "^1.11.0",
    "prettier-eslint-cli": "^3.2.0",
    "rimraf": "^2.6.1",
    "supertest": "^3.0.0"
  },
  "keywords": [
    "boldr",
    "cli",
    "boldr-cli"
  ],
  "betterScripts": {
    "dev": {
      "command": "cross-env nodemon --exec babel-node --trace-warnings ./src/index.js",
      "env": {
        "NODE_ENV": "development",
        "DATABASE_URI": "postgres://postgres:password@0.0.0.0:5432/boldr",
        "REDIS_URI": "redis://0.0.0.0:6379/0",
        "DATABASE_DEBUG": true,
        "DEBUG": "boldrAPI:*"
      }
    },
    "migrate": {
      "command": "cross-env node --harmony internal/scripts/db.js migrate",
      "env": {
        "DATABASE_URI": "postgres://postgres:password@localhost:5432/boldr",
        "NODE_ENV": "development"
      }
    },
    "migrate:test": {
      "command": "cross-env node --harmony internal/scripts/db.js migrate",
      "env": {
        "DATABASE_URI": "postgres://postgres:password@localhost:5432/boldr_test",
        "NODE_ENV": "development"
      }
    },
    "migration": {
      "command": "cross-env node --harmony internal/scripts/db.js migration",
      "env": {
        "DATABASE_URI": "postgres://postgres:password@localhost:5432/boldr",
        "NODE_ENV": "development"
      }
    },
    "reset": {
      "command": "cross-env node --harmony internal/scripts/db.js reset",
      "env": {
        "DATABASE_URI": "postgres://postgres:password@localhost:5432/boldr_test",
        "NODE_ENV": "development"
      }
    },
    "rollback": {
      "command": "babel-node node_modules/.bin/knex migrate:rollback",
      "env": {
        "DATABASE_URI": "postgres://postgres:password@localhost:5432/boldr_test",
        "NODE_ENV": "test"
      }
    },
    "seed": {
      "command": "cross-env knex seed:run",
      "env": {
        "DATABASE_URI": "postgres://postgres:password@localhost:5432/boldr",
        "NODE_ENV": "development"
      }
    },
    "seed:test": {
      "command": "cross-env knex seed:run",
      "env": {
        "DATABASE_URI": "postgres://postgres:password@localhost:5432/boldr_test",
        "NODE_ENV": "test"
      }
    },
    "test": {
      "command": "npm run reset && jest -w 2 --forceExit",
      "env": {
        "DATABASE_URI": "postgres://postgres:password@localhost:5432/boldr_test",
        "NODE_ENV": "test",
        "KNEX_TEST_TIMEOUT": 30000
      }
    },
    "test:ci": {
      "command": "jest -w 2 --forceExit",
      "env": {
        "NODE_ENV": "test",
        "REDIS_URI": "redis://127.0.0.1:6379/1",
        "DATABASE_URI": "postgres://postgres:password@127.0.0.1:5432/boldr",
        "TOKEN_SECRET": "b0ldrs0s3cr3t",
        "KNEX_TEST_TIMEOUT": 30000
      }
    }
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/(internal|flow-typed|docs|db|lib|static|boldrAPI)/",
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/internal/jest/transform.js"
    },
    "testRegex": ".*.spec\\.js",
    "setupTestFrameworkScriptFile": "<rootDir>/internal/jest/setup.js",
    "testPathIgnorePatterns": [
      "<rootDir>/(internal|config|docs|.idea|static|lib|boldrAPI|db)/"
    ],
    "testEnvironment": "node",
    "transformIgnorePatterns": [
      "/boldrAPI/",
      "/lib/",
      "/node_modules/",
      "/db/"
    ],
    "coverageReporters": [
      "json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-kawaii"
    }
  }
}
